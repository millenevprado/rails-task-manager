<h1><%= @task.title %></h1>

<p><%= @task.details %></p>
<% done = @task.completed ? '[x]' : '[ ]' %>
<% if @task.completed  %>
  <p><%= done %> - This task is completed</p>
<% else  %>
  <p><%= done %> - This task is not completed yet</p>
<% end  %>

<%= link_to 'Edit task', edit_task_path(@task) %>
<%= link_to 'Back to list', tasks_path %>
